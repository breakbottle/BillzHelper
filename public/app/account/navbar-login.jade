.navbar-right(ng-controller="bilLoginCtrl")
    form.navbar-form(ng-hide="identity.isAuthenticated()")
        .form-group
            input.form-control(placeholder="Username", ng-model="username")
            div
                a(href="#",ng-click="singup()") Sign Up
        .form-group
            input.form-control(type="password",placeholder="Password", ng-model="password")
            div
                a(href="/") Forgot?
        .form-group
            button.btn.btn-primary(ng-click="login(this.username,password)") Login
            div &nbsp;
    ul.nav.navbar-nav.nabar-right(ng-show="identity.isAuthenticated()")
        li.dropdown
            a.dropdown-toggle(href="",data-toggle="dropdown")
                | {{identity.currentUser.Name}}
                b.caret
            ul.dropdown-menu
                li
                    a(href="",ng-click="logout()") Logout